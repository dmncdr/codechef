#include<iostream>
#include<algorithm>
#include<vector>
#include<cstdio>
#include<vector>
using namespace std;

int main(){
		int t,d;
		
		vector<int>ver;
		int n;
		cin>>n>>d;
		for(int i=0;i<n;i++){int k; cin>>k; ver.push_back(k);}
		
		sort(ver.begin(),ver.end());
		
		//for(int i=0;i<n;i++) printf("%d   ",ver[i]);
		
		int count=0; 
		for(int i=0;i<n;i++){
				if( (i+1)<n && ((ver[i+1]-ver[i])<=d)){count++; i++;}
				}
				printf("%d\n",count);
				
					return 0;}
					
				
				
				
				
